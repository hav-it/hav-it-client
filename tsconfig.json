{
  "compilerOptions": {
    /* 기본 옵션 */
    "target": "ES5",
    "module": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
    /* 엄격한 유형 검사 옵션 */
    "strict": true,
    /* 모듈 분석 옵션 */
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@public/*": ["public/*"],
      "@src/*": ["src/*"],
      "@apis": ["src/apis/*"],
      "@assets": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@configs/*": ["src/configs/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@pages/*": ["src/pages/*"],
      "@queries/*": ["src/queries/*"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /* 고급 옵션 */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/*", "./eslintrc.json", "vite.config.ts", "src/vite-env.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
